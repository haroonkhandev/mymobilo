<!-- app/views/articles/index.html.erb -->
<div class="container">
  <h1>Articles</h1>
  
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <%= link_to 'Read More', article_path(article), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>