<!-- app/views/articles/show.html.erb -->
<div class="container">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <p><strong>Category:</strong> <%= @article.article_category.name %></p>
  <p><strong>Created At:</strong> <%= @article.created_at.to_s(:long) %></p>

  <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary' %>
</div>