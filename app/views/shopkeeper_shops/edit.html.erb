<body>
<!-- Wrapper -->
<div id="db-wrapper">
  <!-- Sidebar -->
  <%= render 'shopkeepers/dashboard/sidebar' %>

  <!-- Page Content -->
  <main id="page-content">
    <section class="container-fluid p-4">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
          <!-- Page header -->
          <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
            <div>
              <h1 class="mb-0 h2 fw-bold">Edit Shopkeeper Shop</h1>
              <!-- Breadcrumb -->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <%= link_to 'Dashboard', shopkeepers_dashboard_path %>
                  </li>
                  <li class="breadcrumb-item">
                    <%= link_to 'Shop', shopkeeper_shops_path %>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Edit Shop
                  </li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="offset-xl-3 col-xl-6 col-md-12 col-12">
          <!-- Card -->
          <div class="card">
            <!-- Card body -->
            <div class="card-body p-lg-6">
              <!-- Form -->
              <%= form_with(model: @shopkeeper_shop, local: true, html: { class: 'row gx-3' }) do |f| %>
                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :shop_name, "Shop Name", class: "form-label" %>
                  <%= f.text_field :shop_name, class: "form-control", placeholder: "Enter shop name", required: true %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :description, "Description", class: "form-label" %>
                  <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Enter brief description..." %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :address, "Address", class: "form-label" %>
                  <%= f.text_field :address, class: "form-control", placeholder: "Enter address" %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :contact_info, "Contact Information", class: "form-label" %>
                  <%= f.text_field :contact_info, class: "form-control", placeholder: "Enter contact information" %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :operating_hours, "Operating Hours", class: "form-label" %>
                  <%= f.text_field :operating_hours, class: "form-control", placeholder: "Enter operating hours" %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :location, "Location", class: "form-label" %>
                  <%= f.text_field :location, class: "form-control", placeholder: "Enter location" %>
                </div>

                <!-- Form group -->
                <div class="mb-3 col-12">
                  <%= f.label :shop_images, "Shop Images", class: "form-label" %>
                  <%= f.file_field :shop_images, multiple: true, class: "form-control" %>
                </div>

                <!-- Button -->
                <div class="col-12">
                  <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
                  <%= link_to 'Back', shopkeepers_dashboard_path, class: 'btn btn-secondary ms-2' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
</body>
