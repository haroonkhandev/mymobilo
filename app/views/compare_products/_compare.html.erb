                <% normalized_product2_build_specs = product2_build_specs.transform_keys { |k| k.to_s.downcase.gsub(/\s+/, "_") } %>

                <% all_keys = (normalized_product1_build_specs.keys + normalized_product2_build_specs.keys).uniq %>

