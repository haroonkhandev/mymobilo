<main>
  <section class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center g-0 min-vh-100">
      <div class="col-lg-6 col-md-8 col-sm-10 py-5">
        <!-- Card -->
        <div class="card shadow-lg border-0">
          <!-- Card body -->
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <a href="<%= root_path %>">
                <img src="/assets/mymobilo.svg" class="mb-4" alt="logo" style="max-width: 150px;">
              </a>
              <h1 class="mb-3 fw-bold">Sign up</h1>
              <p>Already have an account? <a href="<%= new_user_session_path %>" class="ms-1">Sign in</a></p>
            </div>
            <!-- Form -->
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <!-- First Name -->
              <div class="mb-3">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :first_name, class:"form-control", placeholder: "First Name", required: true %>
              </div>

              <!-- Last Name -->
              <div class="mb-3">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :last_name, class:"form-control", placeholder: "Last Name", required: true %>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email address", required: true %>
              </div>

              <!-- Role -->
              <div class="mb-3">
                <%= f.label :role, class: "form-label" %>
                <%= f.select :role, options_for_select([['Please select a role', ''], ['User', 'user'], ['Shopkeeper', 'shopkeeper']]), {}, class: "form-control" %>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <%= f.label :password, class: "form-label" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"**************", required: true %>
              </div>

              <!-- Password Confirmation -->
              <div class="mb-3">
                <%= f.label :password_confirmation, class: "form-label" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"**************", required: true %>
              </div>

              <!-- Terms Checkbox -->
              <div class="mb-3">
                <div class="form-check">
                  <%= f.check_box :terms, class:"form-check-input", id:"agreeCheck", required: true %>
                  <label class="form-check-label" for="agreeCheck">
                    <span>I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy.</a></span>
                  </label>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="mb-4">
                <div class="d-grid">
                  <%= f.submit "Sign up", type:"submit", class:"btn btn-primary" %>
                </div>
              </div>

              <!-- Social Media Links -->
              <hr class="my-4">
              <%= render 'devise/shared/social_links' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
