<!-- app/views/article_categories/index.html.erb -->
<div class="container">
  <h1>Article Categories</h1>
  
  <div class="row">
    <% @article_categories.each do |category| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, article_category_path(category) %></h5>
            <p class="card-text">Number of articles: <%= category.articles.count %></p>
            <%= link_to 'View Articles', article_category_path(category), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>