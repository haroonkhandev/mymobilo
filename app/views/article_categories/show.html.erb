<!-- app/views/article_categories/show.html.erb -->
<div class="container">
  <h1><%= @article_category.name %></h1>
  <p><strong>Created At:</strong> <%= @article_category.created_at.to_s(:long) %></p>

  <h2>Articles in this Category</h2>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <%= link_to 'Read More', article_path(article), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'Back to Categories', article_categories_path, class: 'btn btn-secondary mt-3' %>
</div>