<h1 class="mb-4">Your Shop Profiles</h1>

<%= link_to 'New Shop Profile', new_shopkeeper_profile_path, class: 'btn btn-primary' %>

<% if @shopkeeper_profiles.any? %>
  <div class="row">
    <% @shopkeeper_profiles.each do |profile| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= profile.shop_name %></h5>
            <p class="card-text"><%= profile.description %></p>
            <%= link_to 'Show', shopkeeper_profile_path(profile), class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_shopkeeper_profile_path(profile), class: 'btn btn-warning' %>
            <%= button_to 'Destroy', shopkeeper_profile_path(profile), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No shop profiles found.</p>
<% end %>
