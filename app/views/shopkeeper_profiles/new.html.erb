<body>
<!-- Wrapper -->
<div id="db-wrapper">
  <!-- Sidebar -->
  <%= render 'shopkeepers/dashboard/sidebar' %>

  <!-- Page Content -->
  <main id="page-content">
    <div class="header">
      <!-- navbar -->
      <%= render 'shopkeepers/dashboard/navbar' %>
  </div>
    <section class="container-fluid p-4">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
          <!-- Page header -->
          <div class="border-bottom pb-3 d-md-flex align-items-center justify-content-between mb-3">
            <div class="mb-2 mb-lg-0">
              <h1 class="mb-0 h2 fw-bold">Create New Shop</h1>
              <!-- Breadcrumb -->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="<%= shopkeepers_dashboard_path %>">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item">
                    <a href="#">Shop</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Create Shop
                  </li>
                </ol>
              </nav>
            </div>
            <!-- Button -->
            <div>
              <%#= link_to 'Back to Shop', project_grid_path, class: 'btn btn-primary me-2' %>
            </div>
          </div>
        </div>
      </div>
      <div class="py-6">
        <!-- Row -->
        <div class="row">
          <div class="offset-xl-3 col-xl-6 col-md-12 col-12">
            <!-- Card -->
            <div class="card">
              <!-- Card body -->
              <div class="card-body p-lg-6">
                <!-- Form -->
                <%= form_for @shopkeeper_profile, html: { class: 'row gx-3' } do |f| %>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :shop_name, "Shop Name", class: "form-label" %>
                    <%= f.text_field :shop_name, class: "form-control", placeholder: "Enter shop name", required: true %>
                  </div>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :description, class: "form-label" %>
                    <%= f.text_area :description, class: "form-control", placeholder: "Enter brief description...", rows: 3 %>
                  </div>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :address, class: "form-label" %>
                    <%= f.text_field :address, class: "form-control", placeholder: "Enter address" %>
                  </div>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :contact_information, class: "form-label" %>
                    <%= f.text_field :contact_info, class: "form-control", placeholder: "Enter contact information" %>
                  </div>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :operating_hours, class: "form-label" %>
                    <%= f.text_field :operating_hours, class: "form-control", placeholder: "Enter operating hours" %>
                  </div>
                  <!-- Form group -->
                  <div class="mb-3 col-12">
                    <%= f.label :location, class: "form-label" %>
                    <%= f.text_field :location, class: "form-control", placeholder: "Enter location" %>
                  </div>
                  <!-- Form group -->
                  <div class="col-md-3 col-12 mb-4">
                    <div>
                      <h5 class="mb-3">Shop Images</h5>
                      <div class="icon-shape icon-xxl border rounded position-relative">
                        <span class="position-absolute">
                          <i class="bi bi-image fs-3 text-muted"></i>
                        </span>
                        <%= f.file_field :shop_images, class: "form-control border-0 opacity-0" %>
                      </div>
                    </div>
                  </div>
                  <!-- Button -->
                  <div class="col-12">
                    <%= f.submit 'Submit', class: 'btn btn-primary' %>
                    <%= button_tag 'Close', type: 'button', class: 'btn btn-outline-primary ms-2', data: { bs_dismiss: 'offcanvas', aria_label: 'Close' } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
</body>