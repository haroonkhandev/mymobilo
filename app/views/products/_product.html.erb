<div class="col-xl-3 col-lg-3 col-md-4 col-12 mb-4 mb-lg-0">
  <!-- Card -->
  <div class="card  mb-4 card-hover">
    <% if product&.images.present? %>
      <center>
        <a href="<%= product_path(product) %>" class="card-img-top"><%= image_tag url_for(product.images.first), style: "max-width:120px;" %>
        </a>
      </center>
    <% else %>
      <a href="<%= product_path(product) %>" class="card-img-top"><img src="/assets/official.png" alt="course" class="rounded-top-md card-img-top">
    <% end %>    
    </a>
    <!-- Card Body -->
    <div class="card-body landing-card-body">
      <h4 class="mb-2 text-truncate-line-2">
        <a href="<%= product_path(product) %>" class="text-inherit card-img-top">
          <div class="product-name">
            <span class="name-part name-part-1"><%= product.name.split(' ').first %></span>
            <span class="name-part name-part-2"><%= product.name.split(' ')[1..-1].join(' ') %></span>
          </div>
        </a>
      </h4>
      <!-- Price -->
      <div class="lh-1 mt-3">
        <span class="text-dark fw-bold">RS <%= product.price %></span>
        <% if product.actual_price.present? %>
          <del class="fs-6 text-muted">RS <%= product.actual_price %></del>
        <% end %>
      </div>
    </div>
  </div>
</div>
